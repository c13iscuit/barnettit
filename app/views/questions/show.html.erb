<h5><%= link_to "Questions", :questions %></h5>

<h1>SPECIFIC QUESTION</h1>

<p><%=  @question.title %></p>
<p><%=  @question.description %></p>

<%= button_to "Edit", :edit_question, method: 'get' %>

<%= button_to "Delete", :question, method: 'delete' %>

<h3>Answers:</h3>

<%@answers.each do |answer|%>
  <p><%= answer.description %></p>
  <p>upvotes: <%= answer.upvotes%>
  <%= button_to "upvote", "/questions/#{params[:id]}/answers/#{answer.id}", method: 'get' %></p>
<% end %>


<h3>Submit an answer:</h3>
<%= form_for [@question, @answer] do |f|%>

  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>
