<!DOCTYPE html>
<html>
<head>
  <title>BARNETTIT</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
<div class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">barnettit</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="/posts/new">Create a post!</a>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li id="user-portrait"><%= image_tag "user_default_thumb.png", size: '50x50'%></li>
          <li id="username"><%= link_to current_user.username, user_path(session[:user_id]) %></li>
          <p id = "signout"><a href = "/signout" id="signout-link">(signout)</a></p>
        <% else %>
          <a class="btn btn-block btn-social btn-facebook", href = "/auth/facebook">
            <i class="fa fa-facebook fa-lg"></i> Sign in with Facebook
          </a>
          <a class="btn btn-block btn-social btn-twitter", href = "/auth/twitter">
            <i class="fa fa-twitter"></i> Sign in with Twitter
          </a>
        <% end %>
      </ul>
    </div>
          <br>
  </div>
</div>

<div class="row">
  <% if flash.any? %>
    <div class="col-md-3 col-md-offset-5">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<div class="container">
  <%= yield %>
</div>

<div class="row">
  <div class="col-md-12">
   <div class="footer-contents">
      <hr>
      a c13iscuit labs creation @ Launch Academy 2014
      <br>
      <br>
    </div>
  </div>
</div>

</body>
</html>
