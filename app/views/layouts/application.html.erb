<!DOCTYPE html>
<html>
<head>
  <title>BARNETTIT</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="nav">
<br>
<div class="signed-in-status">
  <div id="welcome-message">
    <%= image_tag "default_no_image_for_post.png", size: '40x40'%>
    Welcome to c13iscuit labs! </div>
    <% if current_user %>
      <span id="welcome-username">
        <%= image_tag "user_default_thumb.png", size: '40x40'%>
        <%= link_to current_user.username, user_path(session[:user_id]) %>
        <a href="/signout" id="signout-link">(signout)</a>
      </span>
    <% else %>
      <span id="sign-in-fb">
        <%= link_to "Sign in with facebook!", "/auth/facebook"%>
      </span>
    <% end %>
  </div>
</div>

<div id="notices container">
  <% if flash.any? %>
    <div id="notice-text">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<%= yield %>

</body>
</html>
