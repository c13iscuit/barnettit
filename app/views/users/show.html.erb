<h5><%= link_to "Back to The Front Page", :posts %></h5>

<h1>USER ACCOUNT PAGE</h1>

<div>
  Sort by:
  <%= button_to "Upvotes", :user, method: 'get', params: {sort: 'upvotes'} %>
  <%= button_to "Date", :user, method: 'get', params: {sort: 'date'} %>
</div>

<% @posts.each do |post| %>
<p><%= link_to post.title, post_path(post.id) %> | <%= post.created_at.to_s[0..10] %> | upvotes <%= post.upvote.count %></p>
<% end %>
